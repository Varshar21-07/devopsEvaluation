pipeline{
    agent any

    tools {
        maven 'Maven'
    }

    stages{
        stage(checkin){
            steps{
               git url:'https://github.com/Varshar21-07/devopsEvaluation.git', branch:'main'
            }
        }
        stage(install){
            steps{
                bat 'npm install'
            }
        }

          stage(build){
           steps{
            bat 'npm run'
           }
        }

        stage(tests){
            steps{
                bat 'npm test || echo "no test defined"'
            }
        }
        
        
    }
}